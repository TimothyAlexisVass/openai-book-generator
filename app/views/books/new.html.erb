<h1 class="text-4xl font-bold mb-4">New Book</h1>

<%= form_with(model: @book, url: books_path, method: :post, html: { class: "max-w-md" }) do |f| %>
  <div class="mb-4">
    <%= f.label :book_type, class: "block font-bold mb-2" %>
    <%= f.select :book_type, Book.book_types.keys, { class: "w-full py-2 px-3 border border-gray-300 rounded" } %>
  </div>

  <div class="mb-4">
    <%= f.label :category, class: "block font-bold mb-2" %>
    <%= f.select :category, Book.categories.keys, { class: "w-full py-2 px-3 border border-gray-300 rounded" } %>
  </div>

  <div class="mb-4">
    <%= f.label :subcategory, class: "block font-bold mb-2" %>
    <%= f.text_field :subcategory, class: "w-full py-2 px-3 border border-gray-300 rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :title, class: "block font-bold mb-2" %>
    <%= f.text_field :title, class: "w-full py-2 px-3 border border-gray-300 rounded" %>
  </div>

  <%= f.submit "Generate Book", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
